{
  "name": "opensoundcloud",
  "version": "0.0.7",
  "description": "A thin SoundCloud API, APIv2 and web-scrape wrapper written in TypeScript.",
  "main": "lib/src/index.js",
  "files": [
    "lib/src/**/*",
    ".npmrc"
  ],
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "dev": "nodemon",
    "demo": "ts-node -r dotenv/config ./demo.ts",
    "build": "rimraf lib && tsc",
    "test": "nyc --reporter=lcov ava",
    "commit": "git cz -S",
    "prepare": "npm run build",
    "prepublishOnly": "npm test",
    "docs:dev": "vuepress dev -p 8088 docs --temp docs/.temp",
    "docs:build": "vuepress build docs",
    "docs:deploy": "netlify build && netlify deploy"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cloudr-app/opensoundcloud"
  },
  "keywords": [
    "soundcloud",
    "typescript",
    "ts",
    "audio",
    "music"
  ],
  "author": "vaaski <admin@vaa.ski>",
  "license": "MIT",
  "dependencies": {
    "ky": "^0.17.0",
    "ky-universal": "^0.8.2"
  },
  "devDependencies": {
    "@types/node": "^12.11.1",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "@vuepress/plugin-back-to-top": "^1.8.1",
    "@vuepress/plugin-medium-zoom": "^1.8.1",
    "@vuepress/plugin-pwa": "^1.8.1",
    "ava": "^3.15.0",
    "commitizen": "4.2.2",
    "dotenv": "^8.2.0",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-ava": "^11.0.0",
    "eslint-plugin-prettier": "^3.3.1",
    "netlify-cli": "^3.8.3",
    "nodemon": "^2.0.7",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^3.8.3",
    "vuepress": "^1.8.1",
    "vuepress-plugin-smooth-scroll": "^0.0.3",
    "vuepress-theme-default-prefers-color-scheme": "^2.0.0"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "files": [
      "tests/**/*"
    ],
    "require": [
      "ts-node/register",
      "dotenv/config"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "root": true,
    "env": {
      "node": true
    },
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2020
    },
    "plugins": [
      "ava"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "@typescript-eslint/member-delimiter-style": [
        "error",
        {
          "multiline": {
            "delimiter": "none"
          }
        }
      ],
      "@typescript-eslint/indent": [
        "error",
        2
      ],
      "@typescript-eslint/no-explicit-any": "off"
    }
  }
}
